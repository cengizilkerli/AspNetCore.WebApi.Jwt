@model ProductList
<form asp-action="Edit" asp-controller="Home" method="POST" class="mx-auto mt-4 w-50 p-3">
    <input type="hidden" asp-for="Id">
    <div class="form-group">
        <label for="Name">Ürün Adı :</label>
        <span asp-validation-for="Name"></span>
        <input asp-for="Name" class="form-control" type="text" >
    </div>

    <a asp-action="Index" asp-controller="Home" class="btn btn-warning btn-sm">Vazgeç</a>
    <button type="submit" class="btn btn-info btn-sm">Kaydet</button>
    
</form>